@page
@model GestionHopital.Pages_Consultations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class= "btn btn-primary"><i class="bi bi-plus-lg"></i></a>
</p>
<table class="table">
    <thead>
        <tr>            
             <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Medecin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Poids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Hauteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Diagnostique)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Date_Consultation)
            </th>           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Consultation) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Medecin.Nom_Complet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Nom_Complet)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hauteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostique)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Consultation)
            </td>            
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> 
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i> Info</a>
                <a class="btn btn-danger"asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
