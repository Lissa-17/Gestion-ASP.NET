@page
@model GestionHopital.Pages_Patients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des patients</h1>

<p>
    <a asp-page="Create" class= "btn btn-primary"><i class="bi bi-plus-lg"></i></a>
</p>
<form method="get" style="display: flex; align-items: center;">
    <div style="flex-grow: 1; margin-right: 10px;">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name">
    </div>
    <div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
    </div>
</form>     
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Sexe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Date_enregistrement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patient) {
        <tr>          
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_enregistrement)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Code"><i class="bi bi-pencil-square"></i> Edit</a> 
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Code"><i class="bi bi-info-circle"></i> Info</a>
                <a class="btn btn-danger"asp-page="./Delete" asp-route-id="@item.Code"><i class="bi bi-trash-fill"></i></a>
                <a class="btn btn-secondary" asp-page= "../Consultations/Index" asp-route-PatientCode="@item.Code"><i class="bi bi-journal-medical"></i>  Consultations</a>
            </td>
        </tr>
}
    </tbody>
</table>
